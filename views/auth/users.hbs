  <div class="detail row">
  {{#each users}}
    <div class="card col-sm-12 col-md-4 col-lg-3 mt-2 mb-2">
      <div class="card-image">
        <figure class="image is-4by3 mt-2">
          <img src="{{this.photo}}" alt="Placeholder image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <h5 class="title is-4">{{this.name}}</h5>
            <p class="subtitle is-6">{{this.description}}</p>
            <p class="subtitle is-6">${{this.price}}</p>
            <p class="subtitle is-6"><span class="tag is-primary">{{this.genre}}</span></p>
            <p class="subtitle is-6"><time datetime="2016-1-1">{{this.date}}</time></span></p>
          </div>
        </div>
        <footer class="card-footer">
          <p class="card-footer-item">
            <span>
              <form action="/users/{{this.id}}" method="POST">
              <input class="btn btn-info w-100" type="submit" value="friends" name="friends">
              </form>
            </span>
          </p>
        </footer>
      </div>
    </div>
  {{/each}}
  </div>